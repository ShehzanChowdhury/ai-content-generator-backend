{
  "info": {
    "name": "AI Content Generator API v1",
    "description": "Complete API collection for AI-Powered Content Generator Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "ai-content-generator"
